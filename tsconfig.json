{
  "compilerOptions": {
    "target": "es5",
    "module": "es2020",
    "moduleResolution": "node",
    "lib": [
      "es2015",
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "composite": true,
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "rootDir": "./src",
    "declarationDir": "types",
    "outDir": "dist",
  },
  "exclude": [
    "node_modules",
    "tests",
  ],
  "include": [
    "./src/**/*.ts",
  ]
}
